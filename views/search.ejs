<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/remixicon@3.5.0/fonts/remixicon.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    
    <style>
        body { font-family: 'Inter', sans-serif; }
        .navbar-brand {
            font-weight: 700;
            font-size: 1.5rem;
            background: linear-gradient(135deg, #2563eb, #7c3aed);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
        }
        .bus-card {
            transition: transform 0.2s ease, box-shadow 0.2s ease;
        }
        .bus-card:hover {
            transform: translateY(-2px);
            box-shadow: 0 8px 25px rgba(0,0,0,0.1);
        }
    </style>
</head>
<body>
    <!-- Navigation -->
    <nav class="navbar navbar-expand-lg navbar-light bg-white shadow-sm py-3">
        <div class="container">
            <a class="navbar-brand" href="/">
                <i class="ri-bus-line me-2"></i>T BUS
            </a>
            
            <div class="d-flex align-items-center">
                <a href="/" class="btn btn-outline-primary me-2">
                    <i class="ri-arrow-left-line me-1"></i>Back to Home
                </a>
                <a href="tel:+251911223344" class="btn btn-primary">
                    <i class="ri-phone-line me-1"></i>Support
                </a>
            </div>
        </div>
    </nav>

    <div class="container mt-5 pt-4">
        <!-- Search Summary -->
        <div class="row mb-4">
            <div class="col-12">
                <div class="card bg-light border-0">
                    <div class="card-body">
                        <div class="row align-items-center">
                            <div class="col-md-8">
                                <h5 class="mb-2">
                                    <i class="ri-route-line text-primary me-2"></i>
                                    <%= searchParams.from_city_name %> → <%= searchParams.to_city_name %>
                                </h5>
                                <p class="mb-0 text-muted">
                                    <i class="ri-calendar-line me-1"></i><%= searchParams.travel_date %>
                                    <span class="mx-2">•</span>
                                    <i class="ri-user-line me-1"></i><%= searchParams.passengers %> passenger(s)
                                </p>
                            </div>
                            <div class="col-md-4 text-md-end">
                                <span class="badge bg-success fs-6"><%= schedules.length %> buses found</span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Search Results -->
        <div class="row">
            <% if (schedules.length === 0) { %>
                <div class="col-12">
                    <div class="card border-0 shadow-sm">
                        <div class="card-body text-center py-5">
                            <i class="ri-bus-line text-muted" style="font-size: 4rem;"></i>
                            <h4 class="mt-3 mb-2">No buses found</h4>
                            <p class="text-muted mb-4">Try searching for a different date or route</p>
                            <a href="/" class="btn btn-primary">
                                <i class="ri-search-line me-2"></i>Search Again
                            </a>
                        </div>
                    </div>
                </div>
            <% } else { %>
                <% schedules.forEach(schedule => { %>
                    <div class="col-12 mb-3">
                        <div class="card border-0 shadow-sm bus-card">
                            <div class="card-body">
                                <div class="row align-items-center">
                                    <!-- Bus Company Info -->
                                    <div class="col-md-3">
                                        <div class="d-flex align-items-center">
                                            <div class="me-3">
                                                <% if (schedule.logo_url) { %>
                                                    <img src="<%= schedule.logo_url %>" alt="<%= schedule.company_name %>" 
                                                         class="rounded" style="width: 50px; height: 50px; object-fit: cover;">
                                                <% } else { %>
                                                    <div class="bg-primary rounded d-flex align-items-center justify-content-center" 
                                                         style="width: 50px; height: 50px;">
                                                        <i class="ri-bus-line text-white fs-4"></i>
                                                    </div>
                                                <% } %>
                                            </div>
                                            <div>
                                                <h6 class="mb-1 fw-bold"><%= schedule.company_name %></h6>
                                                <small class="text-muted">
                                                    <%= schedule.bus_number %> • 
                                                    <span class="text-capitalize"><%= schedule.bus_type %></span>
                                                </small>
                                            </div>
                                        </div>
                                    </div>

                                    <!-- Time Info -->
                                    <div class="col-md-4">
                                        <div class="d-flex align-items-center justify-content-center">
                                            <div class="text-center">
                                                <h5 class="mb-0 fw-bold"><%= schedule.departure_time.substring(0,5) %></h5>
                                                <small class="text-muted"><%= searchParams.from_city_name %></small>
                                            </div>
                                            <div class="mx-3">
                                                <i class="ri-arrow-right-line text-primary fs-4"></i>
                                            </div>
                                            <div class="text-center">
                                                <h5 class="mb-0 fw-bold"><%= schedule.arrival_time.substring(0,5) %></h5>
                                                <small class="text-muted"><%= searchParams.to_city_name %></small>
                                            </div>
                                        </div>
                                    </div>

                                    <!-- Price and Booking -->
                                    <div class="col-md-3">
                                        <div class="text-center">
                                            <h4 class="mb-1 fw-bold text-primary">ETB <%= schedule.price %></h4>
                                            <small class="text-muted">
                                                <i class="ri-user-line me-1"></i><%= schedule.available_seats %> seats left
                                            </small>
                                        </div>
                                    </div>

                                    <!-- Book Button -->
                                    <div class="col-md-2">
                                        <a href="/booking/<%= schedule.id %>?passengers=<%= searchParams.passengers %>" 
                                           class="btn btn-primary w-100">
                                            <i class="ri-ticket-line me-1"></i>Book Now
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                <% }); %>
            <% } %>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>