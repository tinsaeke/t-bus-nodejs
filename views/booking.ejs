<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/remixicon@3.5.0/fonts/remixicon.css" rel="stylesheet">
    
    <style>
        body { font-family: 'Inter', sans-serif; }
        .navbar-brand {
            font-weight: 700;
            background: linear-gradient(135deg, #2563eb, #7c3aed);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
        }
    </style>
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-light bg-white shadow-sm py-3">
        <div class="container">
            <a class="navbar-brand" href="/"><i class="ri-bus-line me-2"></i>T BUS</a>
            <a href="/" class="btn btn-outline-primary">
                <i class="ri-arrow-left-line me-1"></i>Back to Search
            </a>
        </div>
    </nav>

    <div class="container mt-5 pt-4">
        <div class="row">
            <!-- Trip Details -->
            <div class="col-lg-4 mb-4">
                <div class="card border-0 shadow-sm">
                    <div class="card-header bg-primary text-white">
                        <h5 class="mb-0"><i class="ri-ticket-line me-2"></i>Trip Details</h5>
                    </div>
                    <div class="card-body">
                        <div class="mb-3">
                            <h6 class="fw-bold"><%= schedule.company_name %></h6>
                            <small class="text-muted"><%= schedule.bus_number %> â€¢ <%= schedule.bus_type %></small>
                        </div>
                        
                        <div class="d-flex justify-content-between align-items-center mb-3">
                            <div>
                                <h5 class="mb-0"><%= schedule.departure_time.substring(0,5) %></h5>
                                <small class="text-muted"><%= schedule.from_city_name %></small>
                            </div>
                            <i class="ri-arrow-right-line text-primary fs-4"></i>
                            <div>
                                <h5 class="mb-0"><%= schedule.arrival_time.substring(0,5) %></h5>
                                <small class="text-muted"><%= schedule.to_city_name %></small>
                            </div>
                        </div>
                        
                        <hr>
                        
                        <div class="d-flex justify-content-between">
                            <span>Date:</span>
                            <strong><%= schedule.travel_date %></strong>
                        </div>
                        <div class="d-flex justify-content-between">
                            <span>Passengers:</span>
                            <strong><%= passengers %></strong>
                        </div>
                        <div class="d-flex justify-content-between">
                            <span>Price per ticket:</span>
                            <strong>ETB <%= schedule.price %></strong>
                        </div>
                        
                        <hr>
                        
                        <div class="d-flex justify-content-between fs-5">
                            <span class="fw-bold">Total:</span>
                            <strong class="text-primary">ETB <%= schedule.price * passengers %></strong>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Booking Form -->
            <div class="col-lg-8">
                <div class="card border-0 shadow-sm">
                    <div class="card-header">
                        <h5 class="mb-0"><i class="ri-user-line me-2"></i>Passenger Information</h5>
                    </div>
                    <div class="card-body">
                        <form action="/process-booking" method="POST">
                            <input type="hidden" name="schedule_id" value="<%= schedule.id %>">
                            
                            <div class="row g-3">
                                <div class="col-md-6">
                                    <label class="form-label">Full Name *</label>
                                    <input type="text" class="form-control" name="passenger_name" required>
                                </div>
                                
                                <div class="col-md-6">
                                    <label class="form-label">Phone Number *</label>
                                    <input type="tel" class="form-control" name="passenger_phone" required>
                                </div>
                                
                                <div class="col-md-6">
                                    <label class="form-label">Seat Number *</label>
                                    <select class="form-select" name="seat_number" required>
                                        <option value="">Select seat</option>
                                        <% for(let i = 1; i <= Math.min(schedule.available_seats, 20); i++) { %>
                                            <option value="<%= i %>">Seat <%= i %></option>
                                        <% } %>
                                    </select>
                                </div>
                                
                                <div class="col-md-6">
                                    <label class="form-label">Payment Method *</label>
                                    <select class="form-select" name="payment_method" required>
                                        <option value="">Select payment method</option>
                                        <option value="telebirr">TeleBirr</option>
                                        <option value="cbe_birr">CBE Birr</option>
                                        <option value="cash">Cash (Pay at station)</option>
                                    </select>
                                </div>
                                
                                <div class="col-12">
                                    <div class="form-check">
                                        <input class="form-check-input" type="checkbox" id="terms" required>
                                        <label class="form-check-label" for="terms">
                                            I agree to the <a href="#" class="text-primary">Terms and Conditions</a>
                                        </label>
                                    </div>
                                </div>
                                
                                <div class="col-12">
                                    <button type="submit" class="btn btn-primary btn-lg w-100">
                                        <i class="ri-secure-payment-line me-2"></i>Confirm Booking
                                    </button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
                
                <!-- Payment Info -->
                <div class="card border-0 shadow-sm mt-4">
                    <div class="card-body">
                        <h6 class="fw-bold mb-3"><i class="ri-information-line me-2"></i>Payment Information</h6>
                        <div class="row g-3">
                            <div class="col-md-4">
                                <div class="text-center p-3 bg-light rounded">
                                    <i class="ri-smartphone-line text-primary fs-2"></i>
                                    <h6 class="mt-2">TeleBirr</h6>
                                    <small class="text-muted">Instant payment</small>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="text-center p-3 bg-light rounded">
                                    <i class="ri-bank-line text-success fs-2"></i>
                                    <h6 class="mt-2">CBE Birr</h6>
                                    <small class="text-muted">Bank transfer</small>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="text-center p-3 bg-light rounded">
                                    <i class="ri-money-dollar-circle-line text-warning fs-2"></i>
                                    <h6 class="mt-2">Cash</h6>
                                    <small class="text-muted">Pay at station</small>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <%- include('partials/footer') %>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>