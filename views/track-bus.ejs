<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Track Your Bus - T BUS</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
    <link href="https://unpkg.com/leaflet@1.9.4/dist/leaflet.css" rel="stylesheet">
    <style>
        #map {
            height: 400px;
            border-radius: 10px;
        }
        .status-indicator {
            width: 20px;
            height: 20px;
            border-radius: 50%;
            display: inline-block;
            margin-right: 10px;
        }
        .status-not-started { background-color: #6c757d; }
        .status-on-route { background-color: #28a745; animation: pulse 2s infinite; }
        .status-delayed { background-color: #ffc107; animation: pulse 2s infinite; }
        .status-arrived { background-color: #007bff; }
        
        @keyframes pulse {
            0% { opacity: 1; }
            50% { opacity: 0.5; }
            100% { opacity: 1; }
        }
        
        .timeline {
            position: relative;
            padding-left: 30px;
        }
        .timeline::before {
            content: '';
            position: absolute;
            left: 15px;
            top: 0;
            bottom: 0;
            width: 2px;
            background: #dee2e6;
        }
        .timeline-item {
            position: relative;
            margin-bottom: 20px;
        }
        .timeline-item::before {
            content: '';
            position: absolute;
            left: -23px;
            top: 5px;
            width: 12px;
            height: 12px;
            border-radius: 50%;
            background: #dee2e6;
        }
        .timeline-item.completed::before {
            background: #28a745;
        }
        .timeline-item.current::before {
            background: #007bff;
            animation: pulse 2s infinite;
        }
    </style>
</head>
<body class="bg-light">
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
        <div class="container">
            <a class="navbar-brand" href="/">
                <i class="fas fa-bus me-2"></i>T BUS
            </a>
            <a href="/manage-booking" class="btn btn-outline-light">
                <i class="fas fa-arrow-left me-1"></i>Back to Booking
            </a>
        </div>
    </nav>

    <div class="container py-5">
        <div class="row">
            <div class="col-lg-8">
                <!-- Trip Information -->
                <div class="card mb-4">
                    <div class="card-header bg-primary text-white">
                        <h5 class="mb-0"><i class="fas fa-route me-2"></i>Trip Information</h5>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-6">
                                <h6><strong><%= booking.from_city %></strong> → <strong><%= booking.to_city %></strong></h6>
                                <p class="text-muted mb-2">
                                    <i class="fas fa-calendar me-1"></i><%= new Date(booking.travel_date).toLocaleDateString() %>
                                    <i class="fas fa-clock ms-3 me-1"></i><%= booking.departure_time %>
                                </p>
                                <p class="mb-0">
                                    <strong>Booking:</strong> <%= booking.booking_reference %><br>
                                    <strong>Seat:</strong> <%= booking.seat_number %>
                                </p>
                            </div>
                            <div class="col-md-6">
                                <p class="mb-1"><strong>Company:</strong> <%= booking.company_name %></p>
                                <p class="mb-1"><strong>Bus:</strong> <%= booking.bus_number %></p>
                                <p class="mb-0"><strong>Passenger:</strong> <%= booking.passenger_full_name %></p>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Live Tracking Map -->
                <div class="card mb-4">
                    <div class="card-header">
                        <h5 class="mb-0"><i class="fas fa-map-marked-alt me-2"></i>Live Bus Location</h5>
                    </div>
                    <div class="card-body">
                        <div id="map"></div>
                        <div class="mt-3">
                            <div class="d-flex align-items-center">
                                <span class="status-indicator" id="statusIndicator"></span>
                                <span id="statusText">Loading...</span>
                            </div>
                            <small class="text-muted" id="lastUpdate">Last updated: --</small>
                        </div>
                    </div>
                </div>

                <!-- Journey Timeline -->
                <div class="card">
                    <div class="card-header">
                        <h5 class="mb-0"><i class="fas fa-clock me-2"></i>Journey Timeline</h5>
                    </div>
                    <div class="card-body">
                        <div class="timeline" id="timeline">
                            <!-- Timeline items will be loaded here -->
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-lg-4">
                <!-- Current Status -->
                <div class="card mb-4">
                    <div class="card-header bg-success text-white">
                        <h6 class="mb-0"><i class="fas fa-info-circle me-2"></i>Current Status</h6>
                    </div>
                    <div class="card-body">
                        <div id="currentStatus">
                            <div class="text-center">
                                <div class="spinner-border text-primary" role="status">
                                    <span class="visually-hidden">Loading...</span>
                                </div>
                                <p class="mt-2">Loading status...</p>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Emergency Contacts -->
                <div class="card mb-4">
                    <div class="card-header">
                        <h6 class="mb-0"><i class="fas fa-phone me-2"></i>Emergency Contacts</h6>
                    </div>
                    <div class="card-body">
                        <div class="d-grid gap-2">
                            <a href="tel:+251911223344" class="btn btn-outline-primary">
                                <i class="fas fa-phone me-2"></i>T BUS Support
                            </a>
                            <a href="tel:+251911445566" class="btn btn-outline-secondary">
                                <i class="fas fa-building me-2"></i><%= booking.company_name %>
                            </a>
                            <button class="btn btn-outline-danger" onclick="reportEmergency()">
                                <i class="fas fa-exclamation-triangle me-2"></i>Report Emergency
                            </button>
                        </div>
                    </div>
                </div>

                <!-- Share Location -->
                <div class="card">
                    <div class="card-header">
                        <h6 class="mb-0"><i class="fas fa-share me-2"></i>Share Trip</h6>
                    </div>
                    <div class="card-body">
                        <p class="small text-muted mb-3">Share your trip details with family and friends</p>
                        <div class="d-grid gap-2">
                            <button class="btn btn-outline-primary" onclick="shareTrip('whatsapp')">
                                <i class="fab fa-whatsapp me-2"></i>WhatsApp
                            </button>
                            <button class="btn btn-outline-info" onclick="shareTrip('telegram')">
                                <i class="fab fa-telegram me-2"></i>Telegram
                            </button>
                            <button class="btn btn-outline-secondary" onclick="copyTripLink()">
                                <i class="fas fa-copy me-2"></i>Copy Link
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://unpkg.com/leaflet@1.9.4/dist/leaflet.js"></script>
    <script>
        let map;
        let busMarker;
        const scheduleId = <%= booking.schedule_id %>;
        const bookingRef = '<%= booking.booking_reference %>';

        // Initialize map
        function initMap() {
            map = L.map('map').setView([9.0320, 38.7469], 7); // Ethiopia center
            
            L.tileLayer('https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png', {
                attribution: '© OpenStreetMap contributors'
            }).addTo(map);
            
            // Add route markers
            const startMarker = L.marker([9.0320, 38.7469])
                .addTo(map)
                .bindPopup('<%= booking.from_city %> (Departure)');
            
            const endMarker = L.marker([7.0620, 38.2080])
                .addTo(map)
                .bindPopup('<%= booking.to_city %> (Destination)');
        }

        // Update bus location
        async function updateBusLocation() {
            try {
                const response = await fetch(`/api/track-bus/${scheduleId}`);
                const data = await response.json();
                
                // Update status indicator
                const statusIndicator = document.getElementById('statusIndicator');
                const statusText = document.getElementById('statusText');
                const lastUpdate = document.getElementById('lastUpdate');
                
                statusIndicator.className = `status-indicator status-${data.status.replace('_', '-')}`;
                
                const statusMessages = {
                    'not_started': 'Bus has not departed yet',
                    'on_route': `Bus is on route - ${data.currentLocation}`,
                    'delayed': `Bus is delayed by ${data.delay} minutes`,
                    'arrived': 'Bus has arrived at destination'
                };
                
                statusText.textContent = statusMessages[data.status] || 'Status unknown';
                lastUpdate.textContent = `Last updated: ${new Date(data.lastUpdate).toLocaleTimeString()}`;
                
                // Update current status card
                updateCurrentStatusCard(data);
                
                // Update timeline
                updateTimeline(data);
                
                // Update bus marker on map
                if (data.latitude && data.longitude) {\n                    if (busMarker) {\n                        map.removeLayer(busMarker);\n                    }\n                    \n                    busMarker = L.marker([data.latitude, data.longitude], {\n                        icon: L.divIcon({\n                            className: 'bus-marker',\n                            html: '<i class=\"fas fa-bus\" style=\"color: #007bff; font-size: 20px;\"></i>',\n                            iconSize: [30, 30]\n                        })\n                    }).addTo(map).bindPopup(`Bus Location: ${data.currentLocation}`);\n                    \n                    map.setView([data.latitude, data.longitude], 10);\n                }\n            } catch (error) {\n                console.error('Error updating bus location:', error);\n            }\n        }\n\n        function updateCurrentStatusCard(data) {\n            const currentStatus = document.getElementById('currentStatus');\n            \n            let statusColor = 'primary';\n            if (data.status === 'delayed') statusColor = 'warning';\n            if (data.status === 'arrived') statusColor = 'success';\n            \n            currentStatus.innerHTML = `\n                <div class=\"text-center\">\n                    <i class=\"fas fa-bus fs-1 text-${statusColor} mb-3\"></i>\n                    <h6>${data.currentLocation || 'Location updating...'}</h6>\n                    <p class=\"text-muted mb-2\">Estimated Arrival</p>\n                    <h5 class=\"text-${statusColor}\">${new Date(data.estimatedArrival).toLocaleTimeString()}</h5>\n                    ${data.delay > 0 ? `<small class=\"text-warning\">Delayed by ${data.delay} minutes</small>` : ''}\n                </div>\n            `;\n        }\n\n        function updateTimeline(data) {\n            const timeline = document.getElementById('timeline');\n            const currentTime = new Date();\n            const departureTime = new Date(`${new Date().toDateString()} <%= booking.departure_time %>`);\n            const estimatedArrival = new Date(data.estimatedArrival);\n            \n            const timelineItems = [\n                {\n                    title: 'Departure from <%= booking.from_city %>',\n                    time: '<%= booking.departure_time %>',\n                    status: currentTime > departureTime ? 'completed' : 'pending'\n                },\n                {\n                    title: `Current Location: ${data.currentLocation}`,\n                    time: 'Now',\n                    status: data.status === 'on_route' ? 'current' : 'pending'\n                },\n                {\n                    title: 'Arrival at <%= booking.to_city %>',\n                    time: estimatedArrival.toLocaleTimeString(),\n                    status: data.status === 'arrived' ? 'completed' : 'pending'\n                }\n            ];\n            \n            timeline.innerHTML = timelineItems.map(item => `\n                <div class=\"timeline-item ${item.status}\">\n                    <h6 class=\"mb-1\">${item.title}</h6>\n                    <small class=\"text-muted\">${item.time}</small>\n                </div>\n            `).join('');\n        }\n\n        function reportEmergency() {\n            if (confirm('Are you reporting a real emergency? This will alert authorities.')) {\n                alert('Emergency reported. Authorities have been notified.');\n                // Here you would integrate with emergency services\n            }\n        }\n\n        function shareTrip(platform) {\n            const tripUrl = `${window.location.origin}/track-bus/${bookingRef}`;\n            const message = `I'm traveling with T BUS from <%= booking.from_city %> to <%= booking.to_city %>. Track my journey: ${tripUrl}`;\n            \n            if (platform === 'whatsapp') {\n                window.open(`https://wa.me/?text=${encodeURIComponent(message)}`);\n            } else if (platform === 'telegram') {\n                window.open(`https://t.me/share/url?url=${encodeURIComponent(tripUrl)}&text=${encodeURIComponent(message)}`);\n            }\n        }\n\n        function copyTripLink() {\n            const tripUrl = `${window.location.origin}/track-bus/${bookingRef}`;\n            navigator.clipboard.writeText(tripUrl).then(() => {\n                alert('Trip link copied to clipboard!');\n            });\n        }\n\n        // Initialize and start tracking\n        initMap();\n        updateBusLocation();\n        \n        // Update every 30 seconds\n        setInterval(updateBusLocation, 30000);\n    </script>\n</body>\n</html>