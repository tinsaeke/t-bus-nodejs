    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <script src="https://unpkg.com/aos@2.3.1/dist/aos.js"></script>
    
    <style>
        .how-it-works-card {
            transition: transform 0.3s ease, box-shadow 0.3s ease;
        }
        .how-it-works-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 10px 30px rgba(0,0,0,0.1) !important;
        }
    </style>
    
    <script>
        // Initialize AOS animations
        AOS.init({
            duration: 1000,
            once: true,
            offset: 100
        });

        // Smooth scrolling for navigation links
        document.querySelectorAll('a[href^="#"]').forEach(anchor => {
            anchor.addEventListener('click', function (e) {
                e.preventDefault();
                const target = document.querySelector(this.getAttribute('href'));
                if (target) {
                    target.scrollIntoView({
                        behavior: 'smooth',
                        block: 'start'
                    });
                }
            });
        });
        
        // Swap cities function
        function swapCities() {
            const fromCity = document.querySelector('select[name="from_city"]');
            const toCity = document.querySelector('select[name="to_city"]');
            
            const temp = fromCity.value;
            fromCity.value = toCity.value;
            toCity.value = temp;
        }
        
        // Set minimum date to today
        document.querySelector('input[name="travel_date"]').min = new Date().toISOString().split('T')[0];
        
        // Auto-suggest popular routes
        const popularRoutes = <%- JSON.stringify(popularRoutes || []) %>;
        
        function suggestRoute(fromCityId) {
            const suggestions = popularRoutes.filter(route => 
                route.from_city_id == fromCityId
            );
            
            if (suggestions.length > 0) {
                // Show suggestions UI (implement as needed)
                console.log('Suggested destinations:', suggestions);
            }
        }
        
        // Newsletter subscription
        async function subscribeNewsletter() {
            const email = document.getElementById('newsletterEmail').value;
            if (!email) {
                alert('Please enter your email address');
                return;
            }
            
            try {
                const response = await fetch('/api/subscribe-newsletter', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({ email })
                });
                
                const result = await response.json();
                if (result.success) {
                    alert('Thank you for subscribing to our newsletter!');
                    document.getElementById('newsletterEmail').value = '';
                } else {
                    alert('Subscription failed. Please try again.');
                }
            } catch (error) {
                console.error('Newsletter subscription error:', error);
                alert('Subscription failed. Please try again.');
            }
        }
        
        // Show app download modal on mobile
        if (/Android|iPhone|iPad|iPod|BlackBerry|IEMobile|Opera Mini/i.test(navigator.userAgent)) {
            setTimeout(() => {
                if (!localStorage.getItem('appModalShown')) {
                    const modal = new bootstrap.Modal(document.getElementById('downloadAppModal'));
                    modal.show();
                    localStorage.setItem('appModalShown', 'true');
                }
            }, 5000);
        }
        
        // Set body language attribute for CSS styling
        document.body.setAttribute('data-lang', '<%= currentLang %>');
        
        // Update language display in dropdown
        const langButton = document.querySelector('.dropdown-toggle');
        if (langButton && '<%= currentLang %>' === 'am') {
            document.documentElement.setAttribute('dir', 'ltr'); // Amharic is LTR
        }
    </script>
</body>
</html>