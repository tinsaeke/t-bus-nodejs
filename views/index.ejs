                </div>
            </div>
        </div>
    </section>

    <!-- Popular Routes -->
    <section id="routes" class="py-5 bg-white">
        <div class="container">
            <div class="text-center mb-5">
                <h2 class="display-5 fw-bold mb-3"><%= t.popular_routes %> in Ethiopia</h2>
                <p class="lead text-muted">Discover the most traveled routes across the country</p>
            </div>
            
            <div class="row g-4" id="popularRoutes">
                <% if (popularRoutes && popularRoutes.length > 0) { %>
                    <% popularRoutes.forEach((route, index) => { %>
                        <div class="col-md-4">
                            <div class="card border-0 shadow-sm h-100">
                                <div class="card-body text-center p-4">
                                    <i class="ri-route-line text-<%= index % 3 === 0 ? 'primary' : index % 3 === 1 ? 'success' : 'warning' %> fs-1 mb-3"></i>
                                    <h5 class="fw-bold"><%= route.from_city %> → <%= route.to_city %></h5>
                                    <p class="text-muted mb-3"><%= route.route_count %> daily trips</p>
                                    <span class="badge bg-<%= index % 3 === 0 ? 'primary' : index % 3 === 1 ? 'success' : 'warning' %>">From ETB <%= route.min_price %></span>
                                </div>
                            </div>
                        </div>
                    <% }); %>
                <% } else { %>
                    <div class="col-12 text-center">
                        <p class="text-muted">No routes available at this time</p>
                    </div>
                <% } %>
            </div>
        </div>
    </section>

    <!-- How It Works -->
