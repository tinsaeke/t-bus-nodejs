<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/remixicon@3.5.0/fonts/remixicon.css" rel="stylesheet">
</head>
<body>
    <!-- Navigation -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-success">
        <div class="container-fluid">
            <a class="navbar-brand fw-bold" href="/partner/dashboard">
                <i class="ri-bus-line me-2"></i>T BUS Partner
            </a>
            
            <div class="navbar-nav ms-auto">
                <div class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle" href="#" data-bs-toggle="dropdown">
                        <i class="ri-building-line me-1"></i><%= partner.company_name %>
                    </a>
                    <ul class="dropdown-menu">
                        <li><span class="dropdown-item-text"><%= partner.name %></span></li>
                        <li><hr class="dropdown-divider"></li>
                        <li>
                            <form method="POST" action="/partner/logout" class="d-inline">
                                <button type="submit" class="dropdown-item">
                                    <i class="ri-logout-box-line me-2"></i>Logout
                                </button>
                            </form>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </nav>

    <div class="container-fluid">
        <div class="row">
            <!-- Sidebar -->
            <div class="col-md-3 col-lg-2 bg-light vh-100 p-0">
                <div class="list-group list-group-flush">
                    <a href="/partner/dashboard" class="list-group-item list-group-item-action">
                        <i class="ri-dashboard-line me-2"></i>Dashboard
                    </a>
                    <a href="/partner/buses" class="list-group-item list-group-item-action active">
                        <i class="ri-bus-line me-2"></i>My Buses
                    </a>
                    <a href="/partner/schedules" class="list-group-item list-group-item-action">
                        <i class="ri-calendar-line me-2"></i>Schedules
                    </a>
                    <a href="/partner/bookings" class="list-group-item list-group-item-action">
                        <i class="ri-ticket-line me-2"></i>Bookings
                    </a>
                    <a href="/partner/cities" class="list-group-item list-group-item-action">
                        <i class="ri-map-pin-line me-2"></i>Cities
                    </a>
                </div>
            </div>

            <!-- Main Content -->
            <div class="col-md-9 col-lg-10 p-4">
                <div class="d-flex justify-content-between align-items-center mb-4">
                    <h2>My Buses</h2>
                    <button class="btn btn-success" data-bs-toggle="modal" data-bs-target="#addBusModal">
                        <i class="ri-add-line me-2"></i>Add Bus
                    </button>
                </div>
                
                <div class="row g-4">
                    <% if (buses.length === 0) { %>
                        <div class="col-12">
                            <div class="card border-0 shadow-sm">
                                <div class="card-body text-center py-5">
                                    <i class="ri-bus-line text-muted" style="font-size: 4rem;"></i>
                                    <h4 class="mt-3 mb-2">No buses found</h4>
                                    <p class="text-muted mb-4">Add your first bus to start creating schedules</p>
                                    <button class="btn btn-success" data-bs-toggle="modal" data-bs-target="#addBusModal">
                                        <i class="ri-add-line me-2"></i>Add Bus
                                    </button>
                                </div>
                            </div>
                        </div>
                    <% } else { %>
                        <% buses.forEach(bus => { %>
                            <div class="col-md-6 col-lg-4">
                                <div class="card border-0 shadow-sm h-100">
                                    <div class="card-body">
                                        <div class="d-flex align-items-start justify-content-between mb-3">
                                            <div class="flex-grow-1">
                                                <h5 class="fw-bold mb-1"><%= bus.bus_number %></h5>
                                                <p class="text-muted mb-1 text-capitalize">
                                                    <i class="ri-car-line me-1"></i><%= bus.type %> Class
                                                </p>
                                                <p class="text-muted mb-0">
                                                    <i class="ri-user-line me-1"></i><%= bus.total_seats %> Seats
                                                </p>
                                            </div>
                                            <% if (bus.is_active) { %>
                                                <span class="badge bg-success">Active</span>
                                            <% } else { %>
                                                <span class="badge bg-secondary">Inactive</span>
                                            <% } %>
                                        </div>
                                        
                                        <div class="d-flex gap-1">
                                            <button type="button" class="btn btn-outline-primary btn-sm btn-edit-bus"
                                                    data-bs-toggle="modal" data-bs-target="#editBusModal"
                                                    data-bus='<%- JSON.stringify(bus) %>'>
                                                <i class="ri-edit-line"></i> Edit
                                            </button>
                                            <button class="btn btn-outline-warning btn-sm toggle-status" data-entity="bus" data-id="<%= bus.id %>">
                                                <i class="ri-refresh-line"></i> Toggle
                                            </button>
                                            <button class="btn btn-outline-danger btn-sm btn-delete" data-entity="bus" data-id="<%= bus.id %>">
                                                <i class="ri-delete-bin-line"></i> Delete
                                            </button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        <% }); %>
                    <% } %>
                </div>
            </div>
        </div>
    </div>

    <!-- Add Bus Modal -->
    <div class="modal fade" id="addBusModal" tabindex="-1">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Add New Bus</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <form method="POST" action="/partner/buses/add">
                    <div class="modal-body">
                        <div class="mb-3">
                            <label class="form-label">Bus Number *</label>
                            <input type="text" class="form-control" name="bus_number" required>
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Bus Type *</label>
                            <select class="form-select" name="type" required>
                                <option value="">Select type</option>
                                <option value="standard">Standard</option>
                                <option value="vip">VIP</option>
                                <option value="business">Business</option>
                            </select>
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Total Seats *</label>
                            <input type="number" class="form-control" name="total_seats" min="10" max="60" required>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                        <button type="submit" class="btn btn-success">Add Bus</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <!-- Edit Bus Modal -->
    <div class="modal fade" id="editBusModal" tabindex="-1">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Edit Bus</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <form method="POST"> <!-- Action will be set by JS -->
                    <div class="modal-body">
                        <div class="mb-3">
                            <label class="form-label">Bus Number *</label>
                            <input type="text" class="form-control" name="bus_number" id="edit_bus_number" required>
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Bus Type *</label>
                            <select class="form-select" name="type" id="edit_bus_type" required>
                                <option value="standard">Standard</option>
                                <option value="vip">VIP</option>
                                <option value="business">Business</option>
                            </select>
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Total Seats *</label>
                            <input type="number" class="form-control" name="total_seats" id="edit_total_seats" min="10" max="60" required>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                        <button type="submit" class="btn btn-success">Save Changes</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="/js/partner.js"></script>
</body>
</html>